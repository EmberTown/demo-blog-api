source 'https://rubygems.org'

gem 'rails', '4.2.5.1'

gem 'rails-api'

gem 'spring', group: :development

# Never do this - use the same db in dev and prod.
group :development do
  gem 'sqlite3'
end

group :production do
  gem 'pg'
  gem 'puma'
end

gem 'jsonapi-resources'
gem 'rspec_api_documentation'

gem 'rack-cors', require: 'rack/cors'

